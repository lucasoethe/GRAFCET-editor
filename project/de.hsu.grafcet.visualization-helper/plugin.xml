<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            id="de.hsu.grafcet.visualization-helper.commands.timeStepCategory"
            name="Time Step Category">
      </category>
      <command
            categoryId="de.hsu.grafcet.visualization-helper.commands.timeStepCategory"
            name="Forward Command"
            id="de.hsu.grafcet.visualization-helper.commands.forwardCommand">
      </command>
      <command
            categoryId="de.hsu.grafcet.visualization-helper.commands.timeStepCategory"
            id="de.hsu.grafcet.visualization-helper.commands.backwardCommand"
            name="Backward Command">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="de.hsu.grafcet.visualizationhelper.handlers.TimeStepHandler"
            commandId="de.hsu.grafcet.visualization-helper.commands.forwardCommand">
      </handler>
      <handler
            class="de.hsu.grafcet.visualizationhelper.handlers.TimeStepHandler"
            commandId="de.hsu.grafcet.visualization-helper.commands.backwardCommand">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="de.hsu.grafcet.visualization-helper.commands.forwardCommand"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6">
      </key>
      <key
            commandId="de.hsu.grafcet.visualization-helper.commands.backwardCommand"
            contextId="org.eclipse.ui.contexts.window"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration"
            sequence="M1+5">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="de.hsu.grafcet.visualization-helper.toolbars.sampleToolbar">
            <command
                  commandId="de.hsu.grafcet.visualization-helper.commands.backwardCommand"
                  icon="icons/bb.png"
                  id="de.hsu.grafcet.visualization-helper.toolbars.backwardCommand"
                  tooltip="Previous Step">
            </command>
            <command
                  commandId="de.hsu.grafcet.visualization-helper.commands.forwardCommand"
                  icon="icons/ff.png"
                  id="de.hsu.grafcet.visualization-helper.toolbars.forwardCommand"
                  tooltip="Next Step">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
